<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_view_divider"
    android:background="#66000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_effect"
        android:orientation="vertical"
        android:padding="@dimen/text_margin">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_view_divider"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <my.carfix.oneworks.controls.CustomImageView
                android:id="@+id/left_image"
                android:layout_width="@dimen/list_view_icon_width"
                android:layout_height="@dimen/list_view_icon_height"
                android:layout_marginRight="@dimen/text_margin"
                android:scaleType="fitXY" />

            <my.carfix.oneworks.controls.CustomTextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textAppearance="?attr/textAppearanceListItem" />

        </LinearLayout>

        <my.carfix.oneworks.controls.CustomImageView
            android:id="@+id/content_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_view_divider" />
    </LinearLayout>
</RelativeLayout>
